import math
choice = int(input('Хале, для того чтобы высчитать запасы по модели Уилсона, введи 1, по модели планирования экономичного размера партии - 2, по модели учитывающей скидки - 3 '))

if choice == 1:
    v = int(input('Введите интенсивность потребления запасов:'))
    s = float(input('Введите затраты на хранения запасов:'))
    K = int(input('Введите затраты на осуществление заказа:'))
    td = int(input('Введите время доставки заказа: '))
    Q = round(math.sqrt(2*K*v/s), 2)
    print(f'Размер заказа {Q}')
    L = round(K*(v/Q)+s*(Q/2), 2)
    print(f'Общие затраты на управление запасами в единицу времени {L}')
    tt = round(Q/v, 2)
    print(f'Период поставки, т.е. время между подачами заказа или между поставками {tt}')
    h = v*td
    print(f'Точка заказа {h}')
    
if choice == 2:
    alpha = int(input('Введите интенсивность производства продукции первым станком:'))
    v = int(input('Введите интенсивность интенсивность потребления запаса:'))
    s = float(input('Введите затраты на хранения запасов:'))
    K = int(input('Введите затраты на осуществление заказа:'))
    tp = int(input('Введите время подготовки производства: '))

    Q = round(math.sqrt(2*K*v*alpha/s(alpha-v)), 2)
    print(f'Размер заказа {Q}')
    L = round(K*(v/Q)+s*(Q(alpha-v)/2*alpha), 2)
    print(f'Общие затраты на управление запасами в единицу времени {L}')
    tt = round(Q/v, 2)
    print(f'Период поставки, т.е. время между подачами заказа или между поставками {tt}')
    h = v*tp
    print(f'Точка заказа {h}') 
if choice == 3:
    import math
    v = int(input('Введите интенсивность потребления запасов:'))
    s = float(input('Введите затраты на хранения запасов:'))
    K = int(input('Введите затраты на осуществление заказа:'))
    td = int(input('Введите время доставки заказа: '))
    c = int(input('Введите цену товара: '))
    Q = round(math.sqrt(2*K*v/s), 2)
    print(f'Размер заказа {Q}')
    L = round(K*(v/Q)+s*(Q/2) + c*v, 2)
    print(f'Общие затраты на управление запасами в единицу времени {L}')
    tt = round(Q/v, 2)
    print(f'Период поставки, т.е. время между подачами заказа или между поставками {tt}')
    h = v*td
    print(f'Точка заказа {h}')
